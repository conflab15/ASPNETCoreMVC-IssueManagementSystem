@model SCDT52CW2Models.ViewModels.IssuesModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Issues";
}

<div class="container shadow-lg p-3 rounded justify-content-xl-center text-center">
    <div class="row" pb-2>
        <div class="col-md-4">
            <h1>Issue Tickets</h1>
        </div>
        <div class="col-md-8">
            <a href="/Issues/Issue/Create" class="btn btn-primary">Create an Issue Ticket</a>
        </div>
    </div>

    <div class="p-4 rounded">
        <h1>General Issues</h1>
        <table id="gen-data" class="table table-bordered w-100">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Issue ID</th>
                    <th>Issue Description</th>
                    <th>Issue Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="p-4 rounded">
        <h1>Technical Issues</h1>
        <table id="technical-data" class="table table-bordered w-100">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Issue ID</th>
                    <th>Issue Description</th>
                    <th>Issue Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts{ 
    <script src="~/js/general.js"></script>
    <script src="~/js/technical.js"></script>
}