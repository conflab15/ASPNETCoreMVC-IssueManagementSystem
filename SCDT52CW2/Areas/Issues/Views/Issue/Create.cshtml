@model SCDT52CW2Models.Issue
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Category Manager";
}

<h1>Raise a new Issue</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IssueID" class="control-label">@Html.DisplayNameFor(m => m.IssueID)</label>
                <input asp-for="IssueID" readonly class="form-control" />
                <span asp-validation-for="IssueID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">@Html.DisplayNameFor(m => m.Date)</label>
                <input type="date" asp-for="Date" readonly class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">@Html.DisplayNameFor(m => m.Author)</label>
                <input asp-for="Author" readonly class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label">@Html.DisplayNameFor(m => m.Desc)</label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isClosed" class="control-label">@Html.DisplayNameFor(m => m.isClosed)</label>
                <input type="checkbox" asp-for="isClosed" readonly class="form-control" />
                <span asp-validation-for="isClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isTechnical" class="control-label">@Html.DisplayNameFor(m => m.isTechnical)</label>
                <input type="checkbox" asp-for="isTechnical" class="form-control" />
                <span asp-validation-for="isTechnical" class="text-danger"></span>
            </div>

            <!-- Needs to check if the above box is ticked, then allow the user to select assets to add to the list from...-->


            <div class="row">
                <div class="col">
                    <input type="submit" asp-action="Create" value="Create Issue" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}