@model SCDT52CW2Models.Issue
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Category Manager";
}

<h1>Raise a new Issue</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" asp-controller="Issue">
            <div class="form-group">
                <input name="id" asp-for="Id" readonly class="form-control" value="@Model.Id" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">@Html.DisplayNameFor(m => m.Date)</label>
                <input name="date" asp-for="Date" readonly class="form-control" value="@Model.Date"/>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">@Html.DisplayNameFor(m => m.Author)</label>
                <input name="author" asp-for="Author" readonly class="form-control" value="@Model.Author"/>
            </div>
            <div class="form-group">
                <input name="userid" asp-for="UserId" readonly class="form-control" value="@Model.UserId" />
            </div>

            <div class="form-group">
                <label asp-for="Desc" class="control-label">@Html.DisplayNameFor(m => m.Desc)</label>
                <input name="desc" asp-for="Desc" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="isTechnical">
                    Technical Issue?:
                    <select name="istechnical" asp-for="isTechnical">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="isClosed">
                    Ticket Status:
                    <select name="isclosed" asp-for="isClosed">
                        <option value="false">Keep Ticket Open</option>
                        <option value="true">Close Ticket</option>
                    </select>
                </label>
            </div>
            <div class="row">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">Back</a>
        </div>
    </div>
</div>