@model SCDT52CW2Models.Issue
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Category Manager";
}

<h1>Raise a new Issue</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">@Html.DisplayNameFor(m => m.Date)</label>
                <input asp-for="Date" readonly class="form-control" value="@Model.Date"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">@Html.DisplayNameFor(m => m.Author)</label>
                <input asp-for="Author" readonly class="form-control" value="@Model.Author"/>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label">@Html.DisplayNameFor(m => m.Desc)</label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isTechnical">
                    Technical Issue?:
                    <select asp-for="isTechnical">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </label>
                <span asp-validation-for="isTechnical" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isClosed">
                    Ticket Status:
                    <select asp-for="isClosed">
                        <option value="false">Keep Ticket Open</option>
                        <option value="true">Close Ticket</option>
                    </select>
                </label>
                <span asp-validation-for="isClosed" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}