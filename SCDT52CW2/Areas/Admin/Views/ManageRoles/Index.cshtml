@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Roles Manager";
}

<form method="post" action="/Admin/ManageRoles/AddRole">
    <div class="container bg-dark rounded shadow-lg p-3 rounded justify-content-xl-center text-center text-light">
        <br />
        <h1>Create new role</h1>
        <br />
        <div class="row">
            <div class="col-2">
                Role: 
            </div>
            <div class="col-6">
                <input name="roleName" class="form-control"/>
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-info">Add New Role</button>
            </div>
        </div>
    </div>
</form>

<br />

<div class="container bg-dark rounded shadow-lg p-3 rounded justify-content-xl-center text-center text-light">
    <h1>Current Roles</h1>
    <table class="table table-bordered table-striped table-dark table-responsive-md">
        <thead>
            <tr>
                <th>Role ID</th>
                <th>Role Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>



