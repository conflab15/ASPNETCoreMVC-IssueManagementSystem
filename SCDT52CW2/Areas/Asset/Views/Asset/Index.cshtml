@model IEnumerable<SCDT52CW2Models.Assets>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Asset Manager";
}

<div class="container shadow-lg p-3 rounded justify-content-xl-center text-center">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-light">Assets List</h2>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary" asp-action="Upsert">Create a new Asset</a>
        </div>
    </div>

    <div class="p-4 rounded">
        <table id="assetData" class="table table-striped table-bordered w-100">
            <thead class="thead-light">
                <tr class="table-info">
                    <th>Asset ID</th>
                    <th>Asset Desc.</th>
                    <th>Asset Location</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/asset.js"></script>
}